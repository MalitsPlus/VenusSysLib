{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
    ],
    "module": "commonjs",
    "outDir": "out",
    "newLine": "lf",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    // "alwaysStrict": true,
  },
  "include": [
    "**/*.ts",
    "database/*",
  ],
  "exclude": [
    "node_modules",
    "out",
    "test",
  ]
}